<!DOCTYPE html>
<html>
  <head>
    <title>Grocery Shop Helper></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">GroceryShopHelper</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="#" class="active">Grocery List</a></li>
            <li><a href="#">Nearby Stores</a></li>
            <li><a href="#">Settings</a></li>
          </ul>
        </div>
      </nav>
      <div class="container">
        <header class="row">
          <div class="col-md-12 text-center">
            <h1>My Grocery List</h1>
          </div>
        </header>

        <section class="row">
          <div class="col-md-12">
            <button class="btn btn-default" id="new-item-button">+ Add Item</button>
          </div>
        </section>

          <form class="row" id="new-item">
              <div class="form-group col-md-3">
                <!--<label>Item Name:</label>-->
                <input class="form-control" placeholder="Item Name">
              </div>
              <div class="form-group col-md-3">
                <!--<label>Quantity:</label>-->
                <input class="form-control" placeholder="Quantity">
              </div>
              <div class="form-group col-md-3">
                <!--<label>Price:</label>-->
                <input class="form-control" placeholder="Price">
              </div>
              <button class="btn btn-default col-md-3">Save</button>
          </form>
        <section id="item-area">

        </section>
    </div> <!-- Closing container -->
      <script src="/javascripts/additem.js"></script>
      <script src="/javascripts/showgroceryitems.js"></script>
  </body>
</html>
